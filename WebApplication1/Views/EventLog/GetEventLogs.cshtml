@model WebApplication1.Entity.EventLogWrapper

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetEventLogs</title>
</head>
<body>
    <link href="~/Content/CSS/Style.css" rel="stylesheet" />
    <div id="contents">
        <span>Search Results:</span>
        <div style="width:70%;text-align:left">
            @if (Model.lstEventLog != null && Model.lstEventLog.Any())
                {
                
                <table id="tblRecords">
                    <tr>
                        <th style="width: 10%; background-color: #D11C1C; ">S. No.</th>
                        <th style="width: 20%; background-color: #D11C1C; ">Date</th>
                        <th style="width: 10%; background-color: #D11C1C; ">Level</th>
                        <th style="width: 30%; background-color: #D11C1C; ">Message</th>
                        <th style="width: 10%; background-color: #D11C1C; ">Action</th>
                    </tr>
                    <tr>

                        @foreach (var item in Model.lstEventLog)
                    {
                        <tr id="trRecords-@item.RowNumber">
                            <td style="width: 10%; background-color: #F0F0F0;">@item.RowNumber</td>
                            <td style="width: 20%; background-color: #F0F0F0;">@item.Date</td>
                            <td style="width: 10%; background-color: #F0F0F0;">@item.Level</td>
                            <td style="width: 30%; background-color: #F0F0F0;"><span style="word-wrap:break-word;width:100px">@item.Message</span></td>
                            <td style="display:none">@item.Exceptions</td>
                            <td><a href="javascript:ShowDetails('@item.RowNumber')"> Detail </a></td>
                        </tr>
                    }
                    </table>
                }
            else
            {
                <span>No record found</span>
            }
        </div>
        <div id="dvPaging">
            @{Html.RenderAction("PagingControl", "EventLog", new { TotalRecords = Model.TotalRecords,PageSize = Model.PageSize,PageIndex = Model.PageIndex });}
        </div>
    </div>

</body>
</html>
